---
const { pathname } = Astro.url;
import { socials, info } from "../assets/data";
---

<nav
  class="w-full h-16 bg-black text-white flex item-center px-4 py-3 top-0 z-50 md:justify-between xs:justify-center fixed"
>
  <ul
    class="grid justify-items-center xl:basis-[20%] md:basis-[28%] md:grid xs:hidden"
    style={{ gridTemplateColumns: `repeat(${socials.length},minmax(0,1fr))` }}
  >
    {
      socials.map((social) => (
        <li>
          <a
            href="#"
            class="text-2xl opacity-50 hover:opacity-100 duraction-300 ease-in cursor-pointer"
          >
            <i class={social.logo} />
          </a>
        </li>
      ))
    }
  </ul>

  <ul class="grid justify-items-center gap-x-3 xl:basis-[20%] md:basis-[20%] sm:basis-[28%] xs:basis-[75%]"
  style={{ gridTemplateColumns: `repeat(${info.length + 1},minmax(0,1fr))` }}
  >
    <li>
      <a
        href="#home"
        class="opacity-70 hover:opacity-100 duration-300 text-[17px] font-semibold"
        >Home</a
      >
    </li>
    {
      pathname === "/" &&
        info.map((i) => (
          <li>
            <a href={`#${i.text.toLowerCase()}`}>{i.text}</a>
          </li>
        ))
    }
  </ul>
</nav>
